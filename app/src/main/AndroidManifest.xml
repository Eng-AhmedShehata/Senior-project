<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="qu.edu.qa.seniorproject">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/applogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.FavouriteNavigationActivity"></activity>
        <activity android:name=".ui.AdminActivity" />
        <activity android:name=".ui.MassageActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".ui.MapsActivity"
            android:label="@string/title_activity_maps"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.ShowDetailActivity" />
        <activity android:name=".ui.ExploreActivity" />
        <activity android:name=".ui.ScannerActivity" />
        <activity
            android:name=".ProfessorHomePage"
            android:label="@string/title_activity_professor_home_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.GuestHomePageActivity" />
        <activity android:name=".ui.WelcomeActivity" />
        <activity
            android:name=".ui.HomePageActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.MainActivity" />
        <activity android:name=".ui.RegisterActivity" />
        <activity android:name=".ui.LoginActivity" />
        <activity
            android:name=".ui.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>